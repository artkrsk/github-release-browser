# Files and directories to exclude from export (when someone installs the package via Composer)
# Note: npm packages need different files than Composer packages

# Development configuration (safe to ignore for npm)
*.code-workspace export-ignore
.gitignore export-ignore
.git export-ignore
.gitattributes export-ignore
.gitmodules export-ignore
node_modules export-ignore
vendor export-ignore
__build__ export-ignore
__assets__ export-ignore

# Release pipeline (development only) - safe to ignore
scripts export-ignore
release.config.js export-ignore
.github export-ignore

# Testing and documentation - safe to ignore
__tests__ export-ignore
__e2e__ export-ignore
tests export-ignore
docs export-ignore
coverage export-ignore

# Development config files - safe to ignore
/*.yml export-ignore
/*.yaml export-ignore
/*.xml export-ignore
/*.js export-ignore
/tsconfig*.json export-ignore
/jsconfig*.json export-ignore
/.browserslistrc export-ignore
/.prettierrc export-ignore
/.prettierignore export-ignore
/.tsbuildinfo export-ignore

# WordPress development files - safe to ignore
project.*.js export-ignore

# Development tooling - safe to ignore
.claude export-ignore
.cursor export-ignore
.husky export-ignore
.phpstan export-ignore
.taskmaster export-ignore
.lintstagedrc.json
.phpstan.neon
.eslint.config.mjs

# IMPORTANT: These files are needed for npm packages and should NOT be ignored:
# - package.json (needed for npm to understand the package)
# - dist/ (needed for the built package)
# - src/ (needed for source code access)
# - README.md (needed for documentation)
# - .npmrc (needed for npm configuration)
