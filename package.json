{
  "name": "@arts/github-release-browser",
  "version": "1.0.2",
  "author": "Artem Semkin",
  "license": "GPL-3.0-or-later",
  "type": "module",
  "description": "Reusable GitHub release browser with PHP backend & React frontend",
  "sideEffects": false,
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/",
    "src"
  ],
  "engines": {
    "node": ">=23.0.0"
  },
  "scripts": {
    "dev": "node __build__/src/index.js dev",
    "build": "node __build__/src/index.js build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky install"
  },
  "peerDependencies": {
    "@wordpress/components": "^30.7.0",
    "@wordpress/element": "^6.34.0",
    "@wordpress/i18n": "^6.7.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@vitest/coverage-v8": "2.1.9",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^9.1.7",
    "jsdom": "^25.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^2.0.0",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  }
}
